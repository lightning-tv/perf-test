{
  "name": "my-blits-app",
  "version": "0.1.0",
  "description": "My Blits App",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "npm run dev",
    "lint": "eslint '**/*.js'",
    "lint:fix": "eslint '**/*.js' --fix",
    "build": "vite build",
    "preview": "vite preview --open --port 8080",
    "dev": "vite dev --host"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.8",
    "prettier": "^3.3.3",
    "vite": "^5.3.5"
  },
  "dependencies": {
    "@lightningjs/blits": "^1.2.0"
  }
}
